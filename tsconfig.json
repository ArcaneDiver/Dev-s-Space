{
        "compilerOptions": {
                /* Basic Options */
                "target": "es5",
                "module": "commonjs",
                "lib": [
                        "ESNext"
                ],
                /* Strict Type-Checking Options */
                "strict": true,
                "strictPropertyInitialization": false,
                /* Module Resolution Options */
                "moduleResolution": "node",
                "esModuleInterop": true,
                /* Advanced Options */
                "forceConsistentCasingInFileNames": true,
                "skipLibCheck": true
        }
}